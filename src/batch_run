#!/bin/bash

export BASEDIR=$(dirname -- "$(dirname -- "$(readlink -f -- "$BASH_SOURCE")")")
cd $BASEDIR

if [ $# -eq 2 ] && [[ $1 = '-f' ]]; then
    TAG=$2
    rm -rf "output/${TAG}"
elif [ $# -eq 2 ] && [[ $1 = '-nf' ]]; then
    TAG=$2
    rm -rf "output/${TAG}"
    export NO_WARMUP=1
elif [ $# -eq 1 ]; then
    TAG=$1
else
    echo "Usage: batch_run -[n][f] <tag>"; exit
fi

export TAG
export CONFIG="conf/${TAG}.env"
export OUTDIR="output/${TAG}"

_clean_all() {
    for child in $(jobs -p); do
        kill $child
        wait $child
    done
    echo "All children terminated"
    exit
}
trap _clean_all SIGINT

if [[ -d $OUTDIR ]]; then
    echo "Run tag must be unique, exiting" >&2
    exit
fi

[[ -f $CONFIG ]] || CONFIG="conf/default.env"
echo "Using config: $CONFIG"

while read line; do 
    [[ -n $line ]] && [[ ! $line =~ ^# ]] && eval "export $line"
done < "$CONFIG"

declare -A profiles=( \
    ["mem"]="--vm 9 --vm-bytes 4g" \
    ["cpu"]="--cpu 18 --cpu-load 50" \
)

if [[ -n $STRESS_PROFILE ]]; then
    export STRESS_PARAMS="${profiles[$STRESS_PROFILE]}"
fi

for rps in $(seq $RPS_START $RPS_STEP $RPS_STOP); do
    # TODO: is this causing problems?
    # numactl --cpunodebind=1 --membind=1 \
        src/benchmark $TAG $rps
done

